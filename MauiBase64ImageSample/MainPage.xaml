<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBase64ImageSample.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

			<Label
                Text="Click on the button and open 10 pages"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="18"
                HorizontalOptions="Center" />

			<Label
                Text="Please use the backbutton on the android emulator to go back to this page. More than one attempt maybe needed to get the error"
                SemanticProperties.HeadingLevel="Level2"
                FontSize="12"
                HorizontalOptions="Center" />
            

            <Button
                Text="Do things"
                Clicked="OnDoThingsClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
